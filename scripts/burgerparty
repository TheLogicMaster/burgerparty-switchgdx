#!/bin/sh
set -e
cd $(dirname $0)/..
BP_DIR=$PWD

DIRS="
burgerparty/build/libs
burgerparty/libs
burgerparty-desktop/build/libs
burgerparty-desktop/libs
linguaj/linguaj/build/libs
"

CLASSPATH=""
for dir in $DIRS ; do
    echo "# $dir"
    for jar in $(ls $BP_DIR/$dir/*.jar) ; do
        echo "- $jar"
        CLASSPATH="$CLASSPATH:$jar"
    done
done

cd burgerparty-android/assets
java -cp $CLASSPATH com.agateau.burgerparty.Main "$@"
