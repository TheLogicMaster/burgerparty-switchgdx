                    <Action duration="50">
                        alpha 0.9
                        moveBy -400 0 1
                    </Action>
                </Image>
                <Image x="650" y="250" name="cutscenes/cloud2">
                    <Action duration="50">
                        alpha 0.85
                        moveBy -200 0 0.95
                    </Action>
                </Image>
                <Image x="0" y="0" name="cutscenes/end-fg" center="root.center"/>
            </AnchorGroup>
        </gdxui>
    </view>
