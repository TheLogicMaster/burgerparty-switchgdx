{
    com.badlogic.gdx.graphics.g2d.BitmapFont: {
        default-font: {
            file: ui/main-font.fnt
        },
        lcd-font: {
            file: ui/lcd-font.fnt
        },
        scored-font: {
            file: ui/scored-font.fnt
        }
    },
    com.badlogic.gdx.graphics.Color: {
        green: {
            a: 1, b: 0, g: 1, r: 0
        },
        white: {
            a: 1, b: 1, g: 1, r: 1
        },
        red: {
            a: 1, b: 0, g: 0, r: 1
        },
        black: {
            a: 1, b: 0, g: 0, r: 0
        },
        lcd-color: {
            a: 1, b: 1, g: 1, r: 1
        }
    },
    com.badlogic.gdx.scenes.scene2d.ui.Button$ButtonStyle: {
        default: {
            down: ui/button-down,
            up: ui/button
        },
        toggle: {
            down: ui/button-down,
            checked: ui/button-down,
            up: ui/button
        }
    },
    com.badlogic.gdx.scenes.scene2d.ui.Label$LabelStyle: {
        default: {
            font: default-font,
            fontColor: white
        },
        score-feedback: {
            font: scored-font,
            fontColor: white
        },
        bubble-text: {
            font: default-font,
            fontColor: black
        }
    },
    com.badlogic.gdx.scenes.scene2d.ui.List$ListStyle: {
        default: {
            font: default-font,
            fontColorSelected: white,
            fontColorUnselected: black,
            selection: ui/button
        }
    },
    com.badlogic.gdx.scenes.scene2d.ui.TextButton$TextButtonStyle: {
        default: {
            down: ui/button-down,
            up: ui/button,
            font: default-font,
            fontColor: white
        }
    },
    com.badlogic.gdx.scenes.scene2d.ui.ImageButton$ImageButtonStyle: {
        round-button: {
            down: ui/imagebutton-down,
            up: ui/imagebutton,
            pressedOffsetY: -2
        }
    }
}
